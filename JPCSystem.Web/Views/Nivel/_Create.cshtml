@model JPCSystem.Domain.Nivel

@{
    Layout = "";
}


    <form id="formNivel">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Nombre: ", htmlAttributes: new { @class = "control-label col-xs-2 col-sm-2 col-lg-2" })
                <div class="col-xs-6 col-sm-6 col-lg-6">
                    @Html.EditorFor(model => model.NombreNivel, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NombreNivel, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </form>

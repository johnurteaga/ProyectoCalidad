@model JPCSystem.Domain.AnioAcademico


<form id="formAnio">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Configurar Año Escolar  @Model.Anio </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Anio)
        
        
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Descripción</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-lg-12">
                        <div class="form-group">
                            @Html.Label("Descripcion: ", htmlAttributes: new { @class = "col-xs-12 col-sm-2 col-lg-2" })
                            <div class="col-xs-12 col-sm-10 col-lg-10">
                                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">Fecha de Matricula</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-lg-12">
                                
                                <div class="form-group">
                                    @Html.Label("Inicio", htmlAttributes: new {@class = "col-xs-12 col-sm-3 col-lg-3"})
                                    <div class="col-xs-12 col-sm-9 col-lg-9">
                                        <div class='input-group date' id='datetimepicker2'>
                                            @Html.EditorFor(model => model.FechaInicioMatricula, new {htmlAttributes = new {@class = "form-control",PlaceHolder = "Hola" }})
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>

                                        @Html.ValidationMessageFor(model => model.FechaInicioMatricula, "", new {@class = "text-danger"})
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Fin", htmlAttributes: new {@class = "col-xs-12 col-sm-3 col-lg-3"})
                                    <div class="col-xs-12 col-sm-9 col-lg-9">
                                        <div class='input-group date' id='datetimepicker3'>
                                            @Html.EditorFor(model => model.FechaFinMatricula, new {htmlAttributes = new {@class = "form-control"}})
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.FechaFinMatricula, "", new {@class = "text-danger"})
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Extemporanea", htmlAttributes: new {@class = "col-xs-2 col-sm-3 col-lg-3"})
                                    <div class="col-xs-12 col-sm-9 col-lg-9">
                                        <div class='input-group date' id='datetimepicker4'>
                                            @Html.EditorFor(model => model.FechaMatriculaExtemporanea, new {htmlAttributes = new {@class = "form-control"}})
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.FechaMatriculaExtemporanea, "", new {@class = "text-danger"})
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">Fecha de Clases</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-lg-12">
                                <div class="form-group">
                                    @Html.Label("Inicio", htmlAttributes: new {@class = "col-xs-12 col-sm-2 col-lg-2"})
                                    <div class="col-xs-12 col-sm-10 col-lg-10">
                                        <div class='input-group date' id='datetimepicker5'>
                                            @Html.EditorFor(model => model.FechaInicio, new {htmlAttributes = new {@class = "form-control"}})
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.FechaInicio, "", new {@class = "text-danger"})
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("Fin", htmlAttributes: new {@class = "col-xs-12 col-sm-2 col-lg-2"})
                                    <div class="col-xs-12 col-sm-10 col-lg-10">
                                        <div class='input-group date' id='datetimepicker6'>
                                            @Html.EditorFor(model => model.FechaFin, new {htmlAttributes = new {@class = "form-control"}})
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.FechaFin, "", new {@class = "text-danger"})
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</form>

<script>
    $(function() {
        $('.date').datepicker({
            format: "dd/MM/yyyy",
            autoclose: true
            //language: 'es'
        });
    });
</script>
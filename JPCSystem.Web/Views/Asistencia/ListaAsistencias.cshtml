@model IEnumerable<JPCSystem.Domain.Asistencia>

@{
    ViewBag.Title = "ListaAsistencias";
}

@section titulo
{
    <h2> Asistencias </h2>
}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="form-inline">
                <label style="text-align: left" class="col-lg-12">Fecha: @DateTime.Now.ToString("D")</label>
                <div class="col-xs-12 col-sm-12 col-lg-12">
                    @Html.DropDownList("NivelId", new SelectList(ViewBag.nivel, "Id", "NombreNivel"), "Nivel", new { @class = "form-control col-lg-10" })
                    @Html.DropDownList("GradoId", (SelectList)ViewBag.grado, null, new { @class = "form-control col-lg-10" })
                    @Html.DropDownList("SeccionId", (SelectList)ViewBag.seccion, null, new { @class = "form-control col-lg-10" })
                    <div class="col-xs-12 col-sm-3 col-lg-3" style="text-align: left">
                        @Html.TextBox("criterioAlumno", "", new { @class = "w3-input w3-border", placeholder = "Alumno" })
                    </div>
                    <button id="btnBuscaMatricula" class="btn btn-primary"><span><i class="fa fa-search"></i></span></button>
                    @Html.ActionLink("Registar Asistencia", "Index", new { }, new { @class = "btn btn-primary", id = "btnAgregarMatricula" })
                    <button id="btnReposteAsistencia" class="btn btn-warning"><span><i class="glyphicon glyphicon-list-alt"></i></span></button>

                    @*<span  class="badge badge-default"><i id="falso">0</i></span>
                    <span  class="badge badge-danger"><i id="asiste">0</i></span>*@
                    

                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="myModalReporte" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title" id="exampleModalLabel">Modal title</h3>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                
                
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModalEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title" id="exampleModalLabel">Modal title</h3>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button id="btnEditAsistencia"  type="button" class="btn btn-primary">Guardar</button>
               
            </div>
        </div>
    </div>
</div>

<div id="mensaje2">
    @if (TempData["msj"] != null)
    {
        <div class="alert alert-success" style="text-align: center" id="success-alert2" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <strong>@TempData["msj"]</strong>
        </div>
    }
</div>


<div class="table-responsive">

    <div id="search_Asistencia">
        @Html.Partial("_ListaAistencia", Model)
    </div>

</div>
@section scripts{
    <script src="~/Scripts/JPCSystemJs/Asistencia/Asistencia.js"></script>
}
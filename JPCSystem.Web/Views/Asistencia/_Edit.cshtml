@model JPCSystem.Web.Models.AsistemciAlumnoModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formAistenciaEdit" }))
{

    <form class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AlumnoId)
        @Html.HiddenFor(model => model.AsistenciId)
        @Html.HiddenFor(model => model.seccionId)
        @Html.HiddenFor(model => model.Fecha)
        @Html.HiddenFor(model => model.Nombre)
        @Html.HiddenFor(model => model.AnioAcademicoId)

        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-lg-6">
                    <ul class="nav nav-pills">
                        Nombre : @Model.Nombre
                    </ul>
                </div>
                <div class="col-lg-6">
                    <ul class="nav nav-pills">
                        Fecha : @Model.Fecha.ToString("D")
                    </ul>
                </div>

            </div>
        </div>

        <div class="form-horizontal">

            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-lg-6">
                        <ul class="nav nav-pills">
                            Asistencia:
                            @if (Model.Asistencia == false)
                            {
                                <input data-val="True"
                                       id="estado"
                                       name="estado"
                                       type="checkbox"
                                       value="True"/>
                            }
                            @if (Model.Asistencia == true)
                            {
                               <input data-val="false"
                                       id="estado"
                                       name="estado"
                                       type="checkbox"
                                       value="true" checked />
                            }
                        </ul>

                    </div>
                </div>
            </div>

        </div>
    </form>
}
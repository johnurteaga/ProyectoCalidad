@model IEnumerable<JPCSystem.Domain.Matricula>

<table class="table">
    <tr>
        <th>
            Matricula
        </th>
        <th>
            Alumno
        </th>
        <th>
            Apoderado
        </th>
        <th>
            Aula
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaMatricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.ApPaterno)
                @Html.DisplayFor(modelItem => item.Alumno.ApMaterno),
                @Html.DisplayFor(modelItem => item.Alumno.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apoderado.ApPaterno)
                @Html.DisplayFor(modelItem => item.Apoderado.ApMaterno),
                @Html.DisplayFor(modelItem => item.Apoderado.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seccion.Grado.NombreGrado)
                @Html.DisplayFor(modelItem => item.Seccion.NombreSeccion) -
                @Html.DisplayFor(modelItem => item.Seccion.Grado.Nivel.NombreNivel)
            </td>
            <td>
                <div class="btn-group">
                    <a href="@Url.Action("Edit", new { id = item.Id })" title="Edit"
                       style="margin-right: 3px;">
                        <i class="glyphicon glyphicon-pencil"></i>
                        <span class="sr-only">Edit</span>
                    </a>
                    @*<a href="@Url.Action("Details", new { id = item.Id })" title="Details"
                       style="margin-right: 3px;">
                        <i class="glyphicon glyphicon-list-alt"></i>
                        <span class="sr-only">Details</span>
                    </a>*@
                </div>
            </td>
        </tr>
    }

</table>
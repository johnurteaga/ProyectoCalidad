@model IEnumerable<JPCSystem.Domain.Docente>

@{
    ViewBag.Title = "Index";
}

@section titulo
{
    <h2>Docentes</h2>
}

@section scripts
{
    <script src="~/Scripts/JPCSystemJs/Docente/Docente.js" ></script>
}

<div id="myModalDocente" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="modal-content">
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnGuardarDocente" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>

<div class="form-inline">
    <div class="form-group">
        @Html.TextBox("criterioDocente", "", new { @class = "form-control",placeholder="DNI, Apellidos y Nombres"})
        <button id="btnNuevoDocente" type="button" class="btn btn-info " data-toggle="modal" data-target="#myModalDocente">Agregar Docente <i class="fa fa-plus-circle"></i> </button>
    </div>
</div>

<br />

<div class="table-responsive">
    <div id="search_result_Docente">
        @Html.Partial("_DocenteLista", Model)
    </div>
</div>
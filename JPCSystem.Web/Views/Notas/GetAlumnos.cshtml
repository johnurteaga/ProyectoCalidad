@using System.Drawing
@model JPCSystem.Web.Models.NotasViewModel


<table class="table table-hover danger">
    <thead>
        <tr>
            <th>Alumno</th>
            <th>Nota 1 </th>
            <th>Nota 2</th>
            <th>Nota 3</th>
            <th>Nota 4</th>
        </tr>
    </thead>
    @for (int i = 0; i < Model.Alumnos.Count(); i++)
    {
        <tbody class="danger">
        <tr>
            <td>
                @Html.HiddenFor(modelItem => Model.Alumnos[i].IdAlumno)
                @Html.DisplayFor(modelItem => Model.Alumnos[i].Alumno, new {htmlAttributes = new {@class = "control-label col-md-4 "}})
            </td>
            <td>
                @Html.EditorFor(modelItem => Model.Alumnos[i].Nota1, new {htmlAttributes = new {@class = "form-control"}})
            </td>
            <td>
                @Html.EditorFor(modelItem => Model.Alumnos[i].Nota2, new {htmlAttributes = new {@class = "form-control"}})
            </td>
            <td>
                @Html.EditorFor(modelItem => Model.Alumnos[i].Nota3, new {htmlAttributes = new {@class = "form-control"}})
            </td>
            <td>
                @Html.EditorFor(modelItem => Model.Alumnos[i].Nota4, new { htmlAttributes = new { @class = "form-control" } })
                @Html.EditorFor(modelItem => Model.Alumnos[i].Nota4, new {htmlAttributes = new {@class = "form-control"}})
            </td>
        </tr>
        </tbody>
    }
</table>